@model Models.WeatherInfo

<!-- this should probably be in the master page -->
@*<link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta/css/bootstrap.min.css">*@

<div class="container justify-content-center align-items-center">
  <div class="row justify-content-center align-items-center" style="min-height: 100px;">
    <h3>The Weather in @Html.Raw(@Model.Location.City), @Html.Raw(@Model.Location.Country)</h3>
  </div>
    <div class="row justify-content-center align-items-start" style="min-height: 50px;">
      <div class="col-2">
        Temperature:
      </div>
      <div class="col-2">
        @Html.Raw(@Model.Temperature.format)
        @Html.Raw(@Model.Temperature.value)
      </div>
    </div>
    <div class="row justify-content-center align-items-start" style="min-height: 50px;">
      <div class="col-2">
        Humidity:
      </div>
      <div class="col-2">
        @Html.Raw(@Model.Humidity)
      </div>
    </div>
  </div>







